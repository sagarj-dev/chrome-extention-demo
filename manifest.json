{
  "manifest_version": 3,
  "name": "Mekanism",
  "version": "1.0.0",
  "description": "hey this is just a test extention",

  "action": {
    "default_popup": "index.html",
    "default_icons": {
      "128": "./icons/128.png",
      "48": "./icons/48.png",
      "32": "./icons/32.png",
      "16": "./icons/16.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    { "matches": ["*://*.saucedemo.com/*"], "js": ["./contentScript.js"] }
  ],
  "host_permissions": ["*://*.saucedemo.com/*"],
  "permissions": ["tabs"]
}
